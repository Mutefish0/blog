// Fonts
$font-family-body = -apple-system, "PingFang SC", "Helvetica Neue", "PingFang SC", "Microsoft YaHei", "Source Han Sans SC"
$font-family-mono = Menlo, "Meslo LG", Monaco, "Source Code Pro", Consolas, monospace
$font-family-tt = "Inconsolata", monospace
$font-size = 14px
$line-height = 1.725
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
$logo-height = 0px + (hexo-config("logo.height") || 0)
// Colors
$colors = hexo-config("colorscheme") || "dark"
